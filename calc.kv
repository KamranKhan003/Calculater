#:kivy 2.0.0

<MyLayout>:

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            size_hint: (1,.15)
            halign: 'right'
            text: '0'
            font_size: 34
            multiline: False
        
        GridLayout:
            cols: 4
            rows: 5

            Button:
                text: '%'
                font_size:34
                size_hint: (.2,.2)

            Button:
                text: 'C'
                font_size:34
                size_hint: (.2,.2)
                on_press: root.clear()

            Button:
                id: clear
                text: u'\u00AB'
                font_size:34
                on_press: root.remove()
                size_hint: (.2,.2)

            Button:
                text: '/'
                font_size:34
                size_hint: (.2,.2)
                on_press: root.math_sign("/")

            Button:
                text: '7'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(7)

            Button:
                text: '8'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(8)
            Button:
                text: '9'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(9)

            Button:
                text: 'x'
                font_size:34
                size_hint: (.2,.2)
                on_press: root.math_sign("*")

            Button:
                text: '4'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(4)

            Button:
                text: '5'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(5)

            Button:
                text: '6'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(6)

            Button:
                text: '-'
                font_size:34
                size_hint: (.2,.2)
                on_press: root.math_sign("-")

            Button:
                text: '1'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(1)

            Button:
                text: '2'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(2)

            Button:
                text: '3'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(3)

            Button:
                text: '+'
                font_size:34
                size_hint: (.2,.2)
                on_press: root.math_sign("+")

            Button:
                text: '-/+'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.pos_neg()

            Button:
                text: '0'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.button_press(0)

            Button:
                text: '.'
                font_size:34
                background_color: (150/255,150/255,150/255,1)
                size_hint: (.2,.2)
                on_press: root.dot()

            Button:
                text: '='
                font_size:34
                size_hint: (.2,.2)
                on_press: root.equels()
